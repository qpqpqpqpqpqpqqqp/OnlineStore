<div class="orderWindow">
    <div class="orderContainer">
        <div class="orderBody">
            <p>Create Order</p>
            <form action="">
                <input type="text" class="name" placeholder="Name" pattern="[A-Za-z]{3,}" title="Only letters">
                <input type="text" class="phone" placeholder="Phone number" pattern="[0-9]{11}" title="Only 11 numbers">
                <input type="text" class="mail" placeholder="E-mail" pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,}$"
                       title="E-mail should be smth@smth.smth">
                <input type="text" class="city" placeholder="City" pattern="[A-Za-z]{5, 15}" title="Only letters">
                <input type="text" class="index" placeholder="Post Index" pattern="[0-9]{6}" title="Only 6 numbers">
                <button class="ordering">Order</button>
            </form>
            <div class="windowClose">&#10006</div>
        </div>
    </div>
</div>

<div class="successWindow">
    <div class="successContainer">
        <div class="successBody">
            <p>YOUR ORDER WAS CREATED SUCCESSFULLY!</p>
            <div class="successClose">&#10006</div>
